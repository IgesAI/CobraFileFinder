# Parts Finder Configuration
# Copy this file to .env and modify as needed

# Flask settings
FLASK_ENV=development  # development, production, testing
SECRET_KEY=change-this-in-production  # Used for session security

# Directory settings
MOTORCYCLE_DIR=N:\Drawings
AEROSPACE_DIR=X:

# File settings
VALID_EXTENSIONS=.stl,.3mf,.step,.stp
CACHE_TTL=3600  # Cache time-to-live in seconds

# API settings
RATE_LIMIT_DEFAULT=200 per day
RATE_LIMIT_SEARCH=30 per minute

# Server settings
HOST=127.0.0.1
PORT=5000
DEBUG=True 